{
  "title": "JSON schema for Metroikku job config files",
  "$schema": "http://json-schema.org/draft-07/schema",
  "filematch": [
    "*.mcj.json",
    "*.mcj.yaml",
    "*.mcj.yml"
  ],

  "type": "object",
  "properties": {
    "inputs": {
      "type": "object",
      "properties": {
        "file": {
          "type": "object",
          "properties": {
            "path": { "type": "string" },
            "options": { "type": "string" },
            "schemaPath": { "type": "string" },
            "format": { "type": "string" },
            "isStream": {"type": "boolean" }
          },
          "required": [
            "path"
          ]
        },
        "file_date_range": {
          "type": "object",
          "properties": {
            "template": { "type": "string" },
            "options": { "type": "string" },
            "schemaPath": { "type": "string" },
            "format": { "type": "string" },
            "date_range": {
              "type": "object",
              "properties": {
                "format": { "type": "string" },
                "startDate": { "type": "string" },
                "endDate": { "type": "string" }
              },
              "required": [
                "format",
                "startDate",
                "endDate"
              ]
            }
          },
          "required": [
            "template",
            "date_range"
          ]
        },
        "cassandra": {
          "type": "object",
          "properties": {
            "host": { "type": "string" },
            "keySpace": { "type": "string" },
            "table": { "type": "string" },
            "user": { "type": "string" },
            "password": { "type": "string" },
            "options": { "type": "string" }
          },
          "required": [
            "host",
            "keySpace",
            "table"
          ]
        },
        "jdbc": {
          "type": "object",
          "properties": {
            "connectionUrl": { "type": "string" },
            "user": { "type": "string" },
            "password": { "type": "string" },
            "table": { "type": "string" },
            "options": { "type": "string" }
          },
          "required": [
            "connectionUrl",
            "user",
            "password",
            "table"
          ]
        },
        "kafka": {
          "type": "object",
          "properties": {
            "servers": { "type": "string" },
            "topic": { "type": "string" },
            "consumerGroup": { "type": "string" },
            "options": { "type": "string" },
            "schemaRegistryUrl": { "type": "string" },
            "schemaSubject": { "type": "string" }
          },
          "required": [
            "servers",
            "topic"
          ]
        }
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "cassandra": {
          "type": "object",
          "properties": {
            "host": { "type": "string" },
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "required": [
            "host"
          ]
        },
        "elasticsearch": {
          "type": "object",
          "properties": {
            "nodes": { "type": "string" }
          },
          "required": [
            "nodes"
          ]
        },
        "file": {
          "type": "object",
          "properties": {
            "dir": { "type": "string" },
            "checkpointLocation": { "type": "string" }
          },
          "required": [
            "dir"
          ]
        },
        "hudi": {
          "type": "object",
          "properties": {
            "dir": { "type": "string" },
            "parallelism": { "type": "string" },
            "maxFileSize": { "type": "string" },
            "operation": { "type": "string" },
            "storageType": { "type": "string" },
            "maxVersions": { "type": "string" },
            "hiveDB": { "type": "string" },
            "hiveJDBCURL": { "type": "string" },
            "hiveUserName": { "type": "string" },
            "hivePassword": { "type": "string" },
            "options": { "type": "string" }
          },
          "required": [
            "dir"
          ]
        },
        "jdbc": {
          "type": "object",
          "properties": {
            "connectionUrl": { "type": "string" },
            "user": { "type": "string" },
            "password": { "type": "string" },
            "driver": { "type": "string" }
          },
          "required": [
            "connectionUrl",
            "user",
            "password",
            "driver"
          ]
        },
        "kafka": {
          "type": "object",
          "properties": {
            "servers": { "type": "string" },
            "checkpointLocation": { "type": "string" },
            "compressionType": { "type": "string" }
          },
          "required": [
            "servers"
          ]
        },
        "redis": {
          "type": "object",
          "properties": {
            "host": { "type": "string" },
            "port": { "type": "string" },
            "auth": { "type": "string" },
            "db": { "type": "string" }
          },
          "required": [
            "host"
          ]
        },
        "redshift": {
          "type": "object",
          "properties": {
            "jdbcURL": { "type": "string" },
            "tempS3Dir": { "type": "string" }
          },
          "required": [
            "jdbcURL",
            "tempS3Dir"
          ]

        },
        "segment": {
          "type": "object",
          "properties": {
            "apiKey": { "type": "string" }
          },
          "required": [
            "apiKey"
          ]
        }
      }
    }
  }
}
