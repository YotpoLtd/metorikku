    "version": "0.2.0",
    "configurations": [
        {
            "type": "scala",
            "request": "launch",
            "name": "Metorikku",
            "mainClass": "com.yotpo.metorikku.Metorikku",
            "args": [
                "-c",
                "tests/config/s3_2_iceberg/main.yaml"
            ],
            "jvmOptions": [
                "-Dspark.master=local[*]",
                "-cp",
                "/workspace/src/test/resources/"
            ]
        },
        {
            "type": "scala",
            "request": "launch",
            "name": "MetorikkuTester",
            "mainClass": "com.yotpo.metorikku.MetorikkuTester",
            "args": [
                "--test-settings",
                "examples/movies_test.yaml"
            ],
            "jvmOptions": [
                "-Dspark.master=local[*]"
            ]
        },
        {
            "type": "scala",
            "request": "launch",
            "name": "MetorikkuValidator",
            "mainClass": "com.yotpo.metorikku.MetorikkuValidator",
            "args": [
                "--file",
                "tests/config/postgres_2_mongodb/main_metric.yaml",
                "--type",
                "metric"
            ],
            "jvmOptions": [
                "-Dspark.master=local[*]"
            ]
        }
    ]
}